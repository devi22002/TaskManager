<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/imgStatus"
            android:src="@drawable/ic_clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp" />

        <!-- Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTitle"
                android:text="Tugas 3 RDF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDesc"
                android:text="Body text for whatever you'd like to say..."
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/11/2025"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>


            <!-- Chips -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Prioritas -->
                <TextView
                    android:id="@+id/chipPriority"
                    android:text="Prioritas"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/bg_chip_priority"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/chipStatus"
                    android:text="Status"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/bg_chip_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
